<h1><%= @instrument.name %>:</h1>


<div class="container">
  <div class="card-instrument">
    <div class="card-instrument-information">
      <div>
        <p>Address: <%= @instrument.location %></p>
      </div>
      <h2 class="card-instrument-pricing"><%= @instrument.price %></h2>
      <p>Category: <%= @instrument.category %></p>
      <p>Description: <%= @instrument.description %></p>
    </div>
  </div>
    <div class="container">
      <%= link_to "Back", instruments_path, class: "btn btn-primary" %>
    </div>
    <%= link_to "Book Now", new_instrument_booking_path(@instrument) %>
</div>

<% if policy(@instrument).edit? %>
<%= link_to "Delete Instrument", instrument_path, method: :delete, class: "btn btn-primary" %>
<%= link_to "Edit Instrument", edit_instrument_path, class: "btn btn-primary" %>
<% end %>


 <p>Reviews<p>
      <% @bookings.each do |booking|%>
      <ul class="list-inline">
       <% if booking.review %>
          <li class="list-unstyled">
          <div class="review-comment">
            <% booking.review.rating.times do %>
            <i class="fa fa-star" aria-hidden="true" ></i>
            <% end %>
            <% (5- booking.review.rating).times do %>
              <i class="fa fa-star-o" aria-hidden="true"></i>
            <% end %>
            <p> <%= booking.review.content %> </p>
          </div>
          </div>
          </li>
        <% end %>
       </ul>
     <% end %>
