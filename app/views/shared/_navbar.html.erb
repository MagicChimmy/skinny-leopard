<div class="navbar navbar-expand-sm navbar-light navbar-lewagon", id="navbar">
  <div class="logos">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag 'logo.png', class: 'border border-dark' %>
    <% end %>
  </div>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>

  <div class="company-name">skinny_leopard</div>

  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto buttons-flex">
      <li class="nav-item active">
        <%= link_to "Browse", instruments_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <% if user_signed_in? %>
      <li class="nav-item dropdown">
        <i class="avatar dropdown-toggle fas fa-user" id="navbarDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://kitt.lewagon.com/placeholder/users/ssaunier"/></i>
        <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
          <%= link_to "My Listings", my_instruments_path, class: "nav-link" %>
          <%= link_to "My Bookings", bookings_path, class: "nav-link" %>
          <%= link_to "Logout", destroy_user_session_path, method: :delete, class: "nav-link"%>
        </div>

      </li>
        <% else %>
      <li>
        <%= link_to(link_to "Login", new_user_session_path, class: "nav-link") %>
      </li>
      <% end %>
      <li class="nav-item">
        <%= link_to new_instrument_path, class: "navbar-brand p-2" do %>
          <div class="newlisting"><i class="fas fa-plus-circle"></i><p>New Listing</p></div>
        <% end %>
      </li>
    </ul>
  </div>
</div>

