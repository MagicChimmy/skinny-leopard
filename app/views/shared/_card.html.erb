<div class="container cards-container">
  <div class="row">
      <% @instruments.each do |i| %>
        <div class="col-sm-4">
          <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path i.photo, height: 300, width: 400, crop: :fill unless i.photo.blank? %>')">
            <h3><%= link_to i.name.capitalize, instrument_path(i), class: "hyperlink" %></h3>
            <p>Â£<%= i.price %></p>
            <p><%= i.category %></p>
              <div class="card-button-top-right">
                <%= link_to instrument_path(i), id: "icon-button", method: :delete, data: { confirm: "Are you sure?" } do %>
                  <i class="fas fa-dumpster"></i>
                <% end %>
              </div>
              <div class="card-button-btm-left"><%= link_to "Edit", edit_instrument_path(i), class: "btn btn-primary", id: "button" %>
              </div>
          </div>
        </div>
      <% end %>
  </div>
</div>
