<div>
 <%= simple_form_for [@instrument, @booking] do |f| %>

      <div>
        <div >
        <p>From </p>
        <%= f.text_field :checkin, value: @checkin_value, placeholder: "dd/mm/yyyy" %>
        </div>
        <div>
        <p> To </p>
        <%= f.text_field :checkout, value: @checkout_value, placeholder: "dd/mm/yyyy" %>
        </div>
        <p> Total price: <span id="total_price"><%= @total_price %> €</span></p>
        <%= f.submit "Book", class: "btn btn-danger"%>
      </div>

    <% end%>
  </div>

