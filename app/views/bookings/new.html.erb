  <script>
    $(document).ready(function() {
      $(".checkin, .checkout").on("change", function(e) {
        var from = $(".checkin").val().split("/");
        var to = $(".checkout").val().split("/");
        var start = new Date(from[2], from[1] - 1, from[0]);
        var end = new Date(to[2], to[1] - 1, to[0]);
        var nb_days = Math.round((end - start)/(1000*60*60*24));
        var total_price = duration * <%= @instrument.price %> || 0 ;
        $("#total_price").html(total_price + " £");
      });
    });
  </script>

<% end %>


